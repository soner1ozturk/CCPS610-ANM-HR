<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update Employee - ANM HR</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <%- include('navbar') %>
    <div class="form-container">
        <h1>Update Employee</h1>
        <input type="text" id="searchTerm" placeholder="Enter name or employee ID">
        <button onclick="searchEmployee()">Search</button>
        <button onclick="listAllEmployees()">List All Employees</button>
        <div id="employeeList" style="display:none;">
            <table class="results-table">
                <thead>
                    <tr>
                        <th>Employee ID</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Salary</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody id="employeeTableBody">
                    <!-- Employees will be populated here dynamically -->
                </tbody>
            </table>
        </div>
        <p id="errorMessage" class="error-message"></p>
    </div>
    <%- include('footer') %>
    <script src="/js/update_employee.js"></script>


</body>
</html>
