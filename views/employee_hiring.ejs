<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Employee Hiring - ANM HR</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <%- include('navbar') %>
    <div class="form-container">
        <h1>Employee Hiring</h1>
        <form id="hiringForm">
            <label for="firstName">First Name:</label>
            <input type="text" id="firstName" name="firstName" required>
            <label for="lastName">Last Name:</label>
            <input type="text" id="lastName" name="lastName" required>
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" required>
            <label for="phone">Phone:</label>
            <input type="text" id="phone" name="phone" required>
            <label for="hireDate">Hire Date:</label>
            <input type="date" id="hireDate" name="hireDate" required>
            <label for="salary">Salary:</label>
            <input type="number" id="salary" name="salary" required>
            <label for="jobId">Job ID:</label>
            <select id="jobId" name="jobId" required>
                <!-- Options will be populated dynamically -->
            </select>
            <label for="managerId">Manager ID:</label>
            <input type="text" id="managerId" name="managerId" required>
            <label for="departmentId">Department ID:</label>
            <input type="text" id="departmentId" name="departmentId" required>
            <button type="submit">Hire</button>
        </form>
        <div id="hireMessage"></div>
    </div>
    <%- include('footer') %>
    <script src="/js/scripts.js"></script>
    <script>
        document.getElementById('hiringForm').addEventListener('submit', function(event) {
            event.preventDefault();
            const formData = new FormData(this);
            const formObject = Object.fromEntries(formData.entries());
            fetch('/hire_employee', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(formObject)
            })
            .then(response => response.json())
            .then(data => {
                const messageDiv = document.getElementById('hireMessage');
                if (data.message) {
                    messageDiv.textContent = data.message;
                    messageDiv.style.color = 'green';
                } else {
                    messageDiv.textContent = 'Error hiring employee.';
                    messageDiv.style.color = 'red';
                }
            })
            .catch(error => {
                console.error('Error:', error);
                document.getElementById('hireMessage').textContent = 'Error hiring employee.';
                document.getElementById('hireMessage').style.color = 'red';
            });
        });

        document.addEventListener('DOMContentLoaded', () => {
            const hireEmployeeForm = document.getElementById('hireEmployeeForm');
            const errorMessage = document.getElementById('errorMessage');

            hireEmployeeForm.addEventListener('submit', async (event) => {
                event.preventDefault();
                const formData = new FormData(hireEmployeeForm);
                const data = Object.fromEntries(formData.entries());

                try {
                    const response = await fetch('/hire_employee', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify(data)
                    });

                    const result = await response.json();
                    if (response.ok) {
                        alert(result.message);
                        errorMessage.textContent = '';
                    } else {
                        throw new Error(result.message);
                    }
                } catch (error) {
                    errorMessage.textContent = error.message;
                }
            });
        });
    </script>
</body>
</html>
